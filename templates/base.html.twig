{% extends 'base.html.twig' %}

{% block title %}Biblioteca{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('app') }}
    {{ encore_entry_link_tags('prestamo') }}
{% endblock %}

{% block body %}
    {% if app.user %}
    <!-- Mostrar el nav solo después de iniciar sesión -->
    <nav class="navbar navbar-expand-lg fixed-top">
        <a class="navbar-brand" href="{{ path('app_home') }}">Biblioteca</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item"><a class="nav-link" href="{{ path('app_home') }}">Menú</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_students_list') }}">Estudiantes</a></li>
                <!-- Libros con menú desplegable -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="librosDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Libros
                    </a>
                    <div class="dropdown-menu" aria-labelledby="librosDropdown" id="generosLista">
                        <!-- Se llenará dinámicamente con AJAX -->
                    </div>
                </li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_prestamo') }}">Préstamos</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_prestamos_activos') }}">Préstamos activos</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_historial_devoluciones') }}">Historial de devoluciones</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Cerrar sesión</a></li>
            </ul>
        </div>
    </nav>
    {% endif %}

    <main class="container mt-5 pt-5">
        {% block content %}{% endblock %}
    </main>

    <div class="prestamo-form">
        <h1>Formulario de préstamo</h1>

        {# Mensajes Flash #}
        {% for flash_message in app.flashes('success') %}
            <div class="alert alert-success">
                {{ flash_message }}
            </div>
        {% endfor %}

        {% for flash_message in app.flashes('error') %}
            <div class="alert alert-danger">
                {{ flash_message }}
            </div>
        {% endfor %}

        {{ form_start(form) }}

        <fieldset>
            <legend>Detalles del libro</legend>
            {{ form_row(form.book, { 'label':'Libro' ,'attr': { 'class': 'book-search', 'id': 'book', 'name': 'book' } }) }}
            <div class="form-group">
                <label for="autor">Autor</label>
                <input type="text" id="autor" name="autor" class="form-control" readonly="readonly" 
                       value="{{ form.book.vars.data ? form.book.vars.data.autor : '' }}">
            </div>
            <div class="form-group">
                <label for="genre">Género</label>
                <input type="text" id="genre" name="genre" class="form-control" readonly="readonly" 
                       value="{{ form.book.vars.data ? form.book.vars.data.genre : '' }}">
            </div>
        </fieldset>

        <fieldset>
            <legend>Detalles del estudiante</legend>
            {{ form_row(form.student, {'label':'Estudiante', 'attr': { 'class': 'student-search', 'id': 'cedula', 'name': 'cedula' } }) }}
            <div class="form-group">
                <label for="nombre">Cedula del estudiante</label>
                <input type="text" id="nombre" name="nombre" class="form-control" readonly="readonly">
            </div>
        </fieldset>

        <fieldset>
            <legend>Fechas del préstamo</legend>
            {{ form_row(form.fechaPrestamo) }}
            {{ form_row(form.fechaDevolucion) }}
        </fieldset>

        {# Campos ocultos para guardar los IDs #}
        <input type="hidden" id="prestamo_student" name="prestamo_student" value="{{ form.student.vars.value ? form.student.vars.value.id : '' }}">
        <input type="hidden" id="prestamo_book" name="prestamo_book" value="{{ form.book.vars.value ? form.book.vars.value.id : '' }}">

        <button type="submit" class="btn btn-primary">Realizar préstamo</button>

        {{ form_end(form) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('app') }}
    {{ encore_entry_script_tags('generos') }}
    {{ encore_entry_script_tags('estadisticas') }}
    {{ encore_entry_script_tags('cedulaValidator') }}
    {{ encore_entry_script_tags('csrfProtection') }}
    {{ encore_entry_script_tags('hello') }}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chartjs-plugin-datalabels"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>  {# Asegúrate de cargar jQuery primero #}
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
    
    <script>
        $(document).ready(function() {
            // Autocompletado para estudiantes
            $('.student-search').select2({
                ajax: {
                    url: '{{ path('search_students') }}',
                    dataType: 'json',
                    processResults: function (data) {
                        return {
                            results: data.map(function (student) {
                                return {
                                    id: student.id,
                                    text: student.nombre
                                };
                            })
                        };
                    }
                }
            });

            // Autocompletado para libros
            $('.book-search').select2({
                ajax: {
                    url: '{{ path('search_books') }}',
                    dataType: 'json',
                    processResults: function (data) {
                        return {
                            results: data.map(function (book) {
                                return {
                                    id: book.id,
                                    text: book.title
                                };
                            })
                        };
                    }
                }
            });

            // Cuando se seleccione un libro, obtener sus datos
            $('.book-search').on('select2:select', function (e) {
                var bookId = e.params.data.id;
                $.ajax({
                    url: '/book-details/' + bookId,
                    method: 'GET',
                    success: function(data) {
                        $('#autor').val(data.autor);
                        $('#genre').val(data.genre);
                        $('#prestamo_book').val(bookId); // Guardar el ID en el campo oculto
                    }
                });
            });

            // Cuando se seleccione un estudiante, obtener sus datos
            $('.student-search').on('select2:select', function (e) {
                var studentId = e.params.data.id;
                $.ajax({
                    url: '/student-details/' + studentId,
                    method: 'GET',
                    success: function(data) {
                        $('#nombre').val(data.nombre);
                        $('#prestamo_student').val(studentId); // Guardar el ID en el campo oculto
                    }
                });
            });
        });
    </script>
{% endblock %}

