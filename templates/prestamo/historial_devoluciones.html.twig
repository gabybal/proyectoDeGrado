{% extends 'base.html.twig' %}

{% block title %}Historial de devoluciones{% endblock %}

{% block body %}
<h1>Historial de devoluciones</h1>

<table class="table">
    <thead>
        <tr>
            <th>Estudiante</th>
            <th>Libro</th>
            <th>Fecha de préstamo</th>
            <th>Fecha de devolución</th>
        </tr>
    </thead>
    <tbody>
        {% for prestamo in prestamos %}
        <tr>
            <td>{{ prestamo.student.nombre }}</td>
            <td>{{ prestamo.book.title }}</td>
            <td>{{ prestamo.fechaPrestamo | date('Y-m-d') }}</td>
            <td>{{ prestamo.fechaDevolucion | date('Y-m-d') }}</td>
        </tr>
        {% else %}
        <tr>
            <td colspan="4">No hay devoluciones registradas.</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
