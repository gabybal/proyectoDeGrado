{% extends 'base.html.twig' %}

{% block title %}Lista de estudiantes{% endblock %}

{% block body %}
<h1>Lista de estudiantes</h1>
<a href="{{ path('app_student') }}" class="btn btn-primary">Agregar estudiante</a>

{# Mostrar mensajes flash si existen #}
{% for flash_message in app.flashes('success') %}
    <div class="alert alert-success">{{ flash_message }}</div>
{% endfor %}
{% for flash_message in app.flashes('error') %}
    <div class="alert alert-danger">{{ flash_message }}</div>
{% endfor %}

<!-- Formulario de búsqueda -->
<div class="input-group mb-3">
    <input type="text" class="form-control" placeholder="Nombre del estudiante" aria-label="Nombre del estudiante" id="studentNameInput">
    <input type="text" class="form-control" placeholder="Cédula del estudiante" aria-label="Cédula del estudiante" id="studentCedulaInput">
    <button class="btn btn-success" type="button" id="addStudentButton">Agregar</button>
</div>



<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Cédula</th>
            <th>Acciones</th> <!-- Columna de acciones -->
        </tr>
    </thead>
    <tbody id="tableBody">
    </tbody>
</table>

<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
  Launch demo modal
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Editar Estudiante</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editStudentForm" method="post" action="#">
                    <div class="mb-3">
                        <label for="studentName" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="studentName" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="studentCedula" class="form-label">Cédula</label>
                        <input type="text" class="form-control" id="studentCedula" name="cedula" required>
                    </div>
                    <input type="hidden" id="studentId" name="id">
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-primary" form="editStudentForm">Guardar cambios</button>
            </div>
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('peticiones') }}
    {{ encore_entry_script_tags('students') }}

{% endblock %}