{% extends 'base.html.twig' %}

{% block title %}Registrar estudiante{% endblock %}

{% block body %}
    <h1>Registrar estudiante</h1>

    {# Mostrar errores globales si los hay #}
    {% if form.vars.errors|length > 0 %}
        <div class="alert alert-danger">
            <strong>¡Hubo un error en el formulario!</strong>
        </div>
    {% endif %}

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.cedula) }}
            {% for error in form.cedula.vars.errors %}
                <div class="error">{{ error.message }}</div>
            {% endfor %}
        </div>

        <div class="form-group">
            {{ form_row(form.nombre) }}
            {% for error in form.nombre.vars.errors %}
                <div class="error">{{ error.message }}</div>
            {% endfor %}
        </div>

        <button type="submit" class="btn btn-primary">Registrar estudiante</button>
    {{ form_end(form) }}

    {# Incluir el archivo de validación de cédula #}
    <script src="{{ asset('js/CedulaValidator.js') }}"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.querySelector('form');
            const cedulaInput = document.getElementById('student_form_cedula');  // Verifica si el ID es correcto

            form.addEventListener('submit', function (event) {
                console.log('Validando cédula: ', cedulaInput.value);
                // Si la cédula no es válida, se previene el envío del formulario
                if (!validarCedula(cedulaInput.value)) {
                    event.preventDefault();
                    event.stopImmediatePropagation(); // Evitar que Turbo.js procese el evento
                    alert('La cédula ingresada no es válida. Por favor, verifica los datos.');
                }
            });
        });
    </script>

    {# Mensajes flash de éxito #}
    {% for flash_message in app.flashes('success') %}
        <div class="alert alert-success">{{ flash_message }}</div>
    {% endfor %}
    
{% endblock %}

