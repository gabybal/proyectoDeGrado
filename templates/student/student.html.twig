{% extends 'base.html.twig' %}

{% block title %}Registrar estudiante{% endblock %}

{% block body %}
    <h1>Registrar estudiante</h1>

    {# Mostrar errores globales si los hay #}
    {% if form.vars.errors|length > 0 %}
        <div class="alert alert-danger">
            <strong>¡Hubo un error en el formulario!</strong>
        </div>
    {% endif %}

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_row(form.cedula) }}
            {% for error in form.cedula.vars.errors %}
                <div class="error">{{ error.message }}</div>
            {% endfor %}
        </div>

        <div class="form-group">
            {{ form_row(form.nombre) }}
            {% for error in form.nombre.vars.errors %}
                <div class="error">{{ error.message }}</div>
            {% endfor %}
        </div>

        <button type="submit" class="btn btn-primary">Registrar estudiante</button>
    {{ form_end(form) }}

    {# Incluir el archivo de validación de cédula #}
    {{ encore_entry_script_tags('cedulaValidator') }}

    {# Mensajes flash de éxito #}
    {% for flash_message in app.flashes('success') %}
        <div class="alert alert-success">{{ flash_message }}</div>
    {% endfor %}
    
{% endblock %}

